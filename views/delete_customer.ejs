<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Customer - Mobile Care</title>
    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body>

    <!-- Navigation Bar -->
    <%- include('_navbar') %>

    <!-- Delete Customer Section -->
    <section class="delete-customer-section py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header text-center">
                            <h3>Delete Customer</h3>
                        </div>
                        <div class="card-body">
                            <form action="/delete_customer/<%= customer.id %>" method="post">
                                <p>Are you sure you want to delete the customer <strong><%= customer.customerName %></strong>?</p>
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <a href="/customer" class="btn btn-secondary">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <%- include('_footer') %>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <!-- Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>
