<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reply to Message - Mobile Care</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/bootstrap.css" rel="stylesheet">
</head>
<body style="padding: 5px;">
    <!-- Navigation Sidebar -->
    <%- include('_navbar') %>

    <!-- Reply Message Section -->
    <div id="reply-message">
        <section class="reply-message-section py-5">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="text-center">Reply to Message</h2>
                        <!-- Original Message -->
                        <div class="alert alert-success">
                            <p><strong>From:</strong> <%= message.email %></p>
                            <p><strong>Subject:</strong> <%= message.subject %></p>
                            <p><strong>Message:</strong> <%= message.message %></p>
                        </div>

                        <!-- Reply Form -->
                        <form action="/admin/reply-message/<%= message.id %>" method="POST">
                            <div class="form-group">
                                <label for="replyMessage">Your Reply</label>
                                <textarea id="replyMessage" name="replyMessage" class="form-control" rows="5" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">Send Reply</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
    
    <!-- Footer Section -->
    <%- include('_footer') %>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0/js/bootstrap.min.js"></script>
</body>
</html>
