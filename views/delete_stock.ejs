<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Stock</title>
    <!-- Bootstrap CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation Bar -->
    <%- include('_navbar') %>

    <!-- Delete Stock Section -->
    <section class="delete-stock-section py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <h3 class="text-center">Delete Stock</h3>
                </div>
            </div>

            <!-- Delete Stock Confirmation -->
            <div class="row mt-5">
                <div class="col-md-6 offset-md-3">
                    <div class="card">
                        <div class="card-header">
                            <h4>Confirm Deletion</h4>
                        </div>
                        <div class="card-body">
                            <form action="/delete_stock/<%= stock.id %>" method="post">
                                <p>Are you sure you want to delete the following stock item?</p>
                                <ul>
                                    <li>Item: <%= stock.item %></li>
                                    <li>Brand: <%= stock.brand %></li>
                                    <li>Model: <%= stock.model %></li>
                                    <li>Quantity: <%= stock.quantity %></li>
                                </ul>
                                <button type="submit" class="btn btn-danger">Delete</button>
                                <a href="/stock" class="btn btn-secondary">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <!-- Footer Section -->
    <%- include('_footer') %>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <!-- Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
